<table>
<thead>
  <tr>
    <th colspan="4"> <%= full_title() %> Media Manzana 420 - (Rancho Grande) - Bariloche </th>
  </tr>
</thead>
<thead>
  <tr>
    <th > <b> <%=l(@emission.at_emission_date, format:"%B-%Y")%> </b></th>
    <th class="td-right" width=10%>Total Media<br>Manzana 420 </th> 
    <th colspan="2" class="td-right" width=30%>Usuario:<br><%= User.find(Medition.find(@emission.medition_id).user_id).name %> </th> 
  </tr>
</thead>
<tbody>
  <tr>
    <td width=90%> <%=t"Social_Fee"%> (Media Manzana 420) </td> 
    <td colspan="5" class="td-right" width=30%> <b> <%= number_to_currency(@emission.social_quote_amount, unit: "$", format:"%u %n", precision:0) %> </b>
  </tr>
  <tr>
    <td width=90%> SIA - <%= t('Water') %> <%= t"Fixed_consumption"%> <br>
        <%=t'Periodo_liquidacion'%>: <b><%=transactionCebMonthYear(meditionCurrentDate())%></b> <br>
        <%=t'Paid'%>: <b><%=l(@emission.sia_date, format:"%d-%b-%Y") if @emission.sia_date %> 
        (<%= number_to_currency(@emission.sia_amount, unit: "$", format:"%u %n", precision:2) %>) 
    </b>
    </td>  
    <td class="td-right" width=10%> <b> <%= consumeWaterFixConsumeAmountWithCurrency() %> </b> </td>
    <td colspan=4 class="td-right" width=30%> <b> <%= number_to_currency(@emission.water_fix_consume_on_user_amount, unit: "$", format:"%u %n", precision:0) %> </b> </td>
  </tr>
  <tr>
   <td width=90%> <%= t"Water_supply_Fund"%> </td> 
   <td class="td-right" width=10%> <b> <%=consumeWaterProvisionAmountWithCurrency()%> </b> </td>
   <td colspan=3 class="td-right" width=30%> <b> <%= number_to_currency(@emission.water_provision_on_user_amount, unit: "$", format:"%u %n", precision:0) %> </b> </td>
  </tr>
  <% if @emission.exceedance_m3_amount_on_user != 0 %>
      <tr>
          <td colspan="2" width=30%> <%=t'surpluse'%> (<%=t'tarifa'%> <%= number_to_currency(@emission.exceedance_amount, unit: "$", format:"%u%n", precision:1)%>/m3): <b><%= @emission.exceedance_m3_by_user%> m3</b></td> 
        <td colspan="4" class="td-right-red" colspan="2" width=10%> <b> <%= number_to_currency(@emission.exceedance_m3_amount_on_user, unit: "$", format:"%u %n", precision:0) %> </b><td colspan="3" width=30%>  </td>
      </tr>
  <% end %>
  <tr>
      <td> CEB - <%=t'Electricity'%> <BR>
        <%=t'Periodo_liquidacion'%>: <b><%=transactionCebMonthYear(meditionCurrentDate())%></b> <br>
        <%=t'Paid'%>: <b><%=l(@emission.ceb_date, format:"%d-%b-%Y") %>
(<%= number_to_currency(@emission.ceb_amount, unit: "$", format:"%u %n", precision:2) %>)
</b>
      </td> 
      <td class="td-right" width=30%> <b> <%= number_to_currency(@emission.ceb_amount, unit: "$", format:"%u %n", precision:0) %> </b> </td>
    <td colspan=3 class="td-right" width=30%> <b> <%= number_to_currency(@emission.ceb_amount_by_user, unit: "$", format:"%u %n", precision:0) %> </b> </td>
  </tr>
  <tr>
      <td colspan="1"> <%= t('Balance_accumulated') %> 
        (<b><%=l(@emission.balance_previous_date, format:"%d-%b-%y") if @emission.balance_previous_date? %></b>)
        </td> 
    <td colspan="5" class="td-right-green" width=30%> <b> <%= number_to_currency(@emission.balance_previous_amount, unit: "$", format:"%u %n", precision:0) %> </b> </td>
  </tr>

  <% if @emission.payment_amount != 0 %> 
      <tr>
          <td colspan="1"> <%= t('Payment_amount') %> 
            (<b><%=l(@emission.payment_date, format:"%d-%b-%y") %> </b>)
          </td> 
        <td colspan="5" class="td-right-blue" width=30% text-color="red"> <b> - <%= number_to_currency(@emission.payment_amount, unit: "$", format:"%u %n", precision:0) %> </b> </td>
      </tr>
  <% end %>

  <tr>
      <td colspan="1" class="td-big"> <%= t('balance_amount') %> </td> 
    <td colspan="5" class="td-right-big" width=30%> <b> <%= number_to_currency(@emission.balance_amount, unit: "$", format:"%u %n", precision:0) %> </b> </td>
  </tr>

</tbody>
<thead>
  <tr>
    <th colspan="6"> <%= t('water_consumption') %> </th>
  </tr>
</thead>
<tbody>
  <tr>
    <td width=90%> <%= t"Previous_reading"%> 
     (<b><%=l(@emission.balance_previous_date, format:"%d-%b-%Y") if @emission.balance_previous_date? %></b>)
    </td>  
    <td class="td-right" width=10%> <b> <%=meditionPrev(meditionCurrentDate()).measure%> m3 </b> </td>
    <td colspan=4 class="td-right" width=10%> <b> <%=@emission.water_previous_measure%> m3 </b> </td>
  </tr>

  <tr>
    <td width=90%> <%= t"Actual_reading"%> 
        (<b><%=l(@emission.at_emission_date, format:"%d-%b-%Y") if @emission.at_emission_date? %></b>) </td>  
    <td class="td-right" width=10%> <b> <%=meditionByDate(meditionCurrentDate()).measure%> m3 </b> </td>
    <td colspan=4 class="td-right" width=10%> <b> <%=@emission.water_measure%> m3 </b> </td>
  </tr>

  <tr>
    <td width=90%> <%= t"Total_consumption"%> </td>
    <td class="td-right" width=10%><%= meditionByDate(meditionCurrentDate()).measure - meditionPrev(meditionCurrentDate()).measure %> m3 </b> </td> 
    <td colspan=4 class="td-right" width=10%><%= @emission.water_consumed %> m3 </b> </td>                                                                    
  </tr>
</tbody>
<thead>
  <tr>
    <th colspan="6"> <%= t('Excedentes') %> </th>
  </tr>
</thead>

<tbody>
  <tr>
  <% if @emission.exceedance_m3_by_user == 0 %> 
    <td colspan=1 width=20%> <%= t"Rates_per_m3_excess"%> 
        (<b><%= number_to_currency(@emission.exceedance_amount, unit: "$", format:"%u%n", precision:1)%>/m3</b>)<br> <%=t"Increased_water_consumption"%> <%= consumeUserExceedance() %> m3. <br>(<%=consumeInfo().exceedance_m3%> m3 / <%= consumeInfo().number_of_members %> <%=t"users"%> = <%= consumeUserExceedance() %> m3)			
</b> </td>
     <td colspan="2" class="td-right-big"> Consumió <%= @emission.water_consumed %> m3.
     </td>
     <td colspan="3" class="td-right-big"> <b>Sin excedentes. </b>
     </td>
  <% else %>
    <td width=90%> <%= t"Rates_per_m3_excess"%> 
        (<b><%= number_to_currency(@emission.exceedance_amount, unit: "$", format:"%u%n", precision:1)%>/m3</b>)<br> <%=t"Increased_water_consumption"%> <%= consumeUserExceedance() %> m3. <br>(<%=consumeInfo().exceedance_m3%> m3 / <%= consumeInfo().number_of_members %> <%=t"users"%> = <%= consumeUserExceedance() %> m3)			
</b> </td>
     <td class="td-right"> Consumió <%= @emission.water_consumed %> m3. 
     <td class="td-right"> <b> Excedente: <br></b> <%= @emission.water_consumed %> - <%= consumeUserExceedance()%> = 
     <td colspan=3 width=100% class="td-right-big-red"> <b><%=@emission.exceedance_m3_by_user %> m3.</b>
  <% end %>
  </tr>
</tbody>
</table>
